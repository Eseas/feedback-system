<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="lt.vu.entities.mybatis.Survey" alias="Survey"/>
        <typeAlias type="lt.vu.entities.mybatis.User" alias="User"/>
        <typeAlias type="lt.vu.entities.mybatis.UserSurvey" alias="UserSurvey"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <!--<property name="data_source" value="java:global/StudentsDataSource"/>-->
                <property name="data_source" value="openejb:Resource/StudentsDataSource"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatis/xml/SurveyMapper.xml"/>
        <mapper resource="mybatis/xml/UserMapper.xml"/>
        <mapper resource="mybatis/xml/UserSurveyMapper.xml"/>
    </mappers>
</configuration>